@model IEnumerable<InventorySystem.Models.Inventory>
@{
    ViewData["Title"] = "Inventories";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="m-0">Inventories</h2>
    <a class="btn btn-outline-primary" asp-action="Create">Create inventory</a>
</div>

<div class="row g-3">
@foreach(var inv in Model)
{
    <div class="col-12 col-md-6 col-lg-4">
        <div class="card card-inventory h-100">
            <div class="card-body">
                <h5 class="card-title">@inv.Name</h5>
                <p class="card-text text-muted">@inv.Description</p>
                <p class="mb-1"><small class="text-muted">Owner:</small> @inv.Owner?.UserName</p>
                <div class="mt-3 d-flex gap-2">
                    <a class="btn btn-sm btn-primary" asp-controller="Item" asp-action="Index" asp-route-inventoryId="@inv.Id">Items</a>
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Settings" asp-route-id="@inv.Id">Settings</a>
                </div>
            </div>
        </div>
    </div>
}
</div>
