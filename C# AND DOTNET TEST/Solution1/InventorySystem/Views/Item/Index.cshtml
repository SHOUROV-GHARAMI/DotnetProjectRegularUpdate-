@model IEnumerable<InventorySystem.Models.Item>
@{
    ViewData["Title"] = "Items";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="m-0">Items</h2>
    <a class="btn btn-outline-primary" asp-action="Create" asp-route-inventoryId="@ViewBag.InventoryId">Create item</a>
</div>

<div class="row g-3">
@foreach(var it in Model)
{
    <div class="col-12 col-md-6 col-lg-4">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">@it.Name <small class="text-muted">@it.CustomId</small></h5>
                <p class="card-text">@Html.Raw(System.Text.Encodings.Web.HtmlEncoder.Default.Encode(it.CustomFieldsJson))</p>
                <a class="btn btn-sm btn-primary" asp-action="Details" asp-route-id="@it.Id">Details</a>
            </div>
        </div>
    </div>
}
</div>
