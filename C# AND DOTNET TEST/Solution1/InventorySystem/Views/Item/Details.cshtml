@model InventorySystem.Models.Item
@{
    ViewData["Title"] = "Item Details";
}

<div class="row">
    <div class="col-12 col-md-8">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title">@Model.Name <small class="text-muted">@Model.CustomId</small></h3>
                <p class="text-muted">Inventory: @Model.InventoryId</p>

                <h5>Details</h5>
                <form asp-action="Edit" method="post" class="row g-3">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="InventoryId" />
                    <div class="col-12">
                        <label class="form-label">Custom Fields (JSON)</label>
                        <textarea asp-for="CustomFieldsJson" class="form-control" rows="6"></textarea>
                        <div class="form-text">Edit JSON custom fields for this product.</div>
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a asp-action="Index" asp-controller="Item" asp-route-inventoryId="@Model.InventoryId" class="btn btn-link">Back to items</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-12 col-md-4">
        <div class="card bg-light mb-3">
            <div class="card-body">
                <h6 class="card-subtitle mb-2 text-muted">Quick info</h6>
                <p><strong>Custom ID:</strong> @Model.CustomId</p>
                <p><strong>RowVersion:</strong> @Model.RowVersion?.Length</p>
                <div class="mt-3">
                    <button class="btn btn-outline-success">Like</button>
                    <button class="btn btn-outline-secondary">Comments</button>
                </div>
            </div>
        </div>
    </div>
</div>
